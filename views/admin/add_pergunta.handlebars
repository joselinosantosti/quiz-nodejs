{{#each erros}}
	<div class="alert alert-danger">{{texto}}</div>
{{else}}
{{/each}}

<h3>Nova pergunta</h3>

<div class="card mt-3">
	<div class="card-body">
		
	<form action="/admin/perguntas/novo" method="post">
	  <div class="form-group">
	    <label for="pergunta">Pergunta</label>
	    <input type="text" class="form-control" name="pergunta" placeholder="Pergunta" required="">

	    <label for="alternativa1">Alternativa 1</label>
	    <input type="text" class="form-control" name="alternativa1" placeholder="Alternativa 1" required="">

	    <label for="alternativa2">Alternativa 2</label>
	    <input type="text" class="form-control" name="alternativa2" placeholder="Alternativa 2" required="">

	    <label for="alternativa3">Alternativa 3</label>
	    <input type="text" class="form-control" name="alternativa3" placeholder="Alternativa 3" required="">

	    <label for="alternativa4">Alternativa 4</label>
	    <input type="text" class="form-control" name="alternativa4" placeholder="Alternativa 4" required="">

	    <label for="resposta">Resposta</label>
	    <input type="text" class="form-control" name="resposta" placeholder="Resposta" required="">

	    <label for="categoria">Categoria</label>
	    <select name="categoria" class="form-control" required="">
	    	{{#each categorias}}
	    	<option value="{{_id}}">{{titulo}}</option>>
	    	{{else}}
	    	<option value="0">Nenhuma categoria</option>>
	    	{{/each}}
	    </select>
	  </div>

	  <div class="form-group">
	    <button type="submit" class="btn bg-purple">Salvar pergunta</button>
	  </div>
	</form>
	</div>
</div>
