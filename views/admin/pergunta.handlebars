<h1>Album</h1>
<hr>
<div class="card mt-3 bg-dark text-light">
	<div class="card-body">
		<div class="row">
			<div class="col-4">
				<img width="300" src="/img/{{album.capa}}.jpg" />
			</div>
			<div class="col-7">
				<h3>{{album.titulo}}</h3>
				<small>2016 . 12 Músicas . 1:20</small><br>
				<hr>

				<ul class="list-group">
					{{#each musicas}}
				  <li class="bg-dark text-light list-group-item d-flex justify-content-between align-items-center">
				  {{posicao}}  {{titulo}}
				    <span class="badge badge-primary bg-purple badge-pill">2:39</span>
				  </li>
				  {{else}}
				  <li class="bg-dark list-group-item d-flex justify-content-between align-items-center">Nenhuma música</li>
				  {{/each}}
				</ul>

			</div>
		</div>
	    	
	  </div>
	</div>
<hr>

<div class="card mt-3 bg-dark text-light">
	<div class="card-body">
	
			<div class="progress mb-1">
			  <div class="progress-bar" role="progressbar" style="width: 25%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
			</div>
	
		<div class="row">
			<div class="col-2">
				<img width="50" src="/img/{{album.capa}}.jpg" />
			</div>
			<div class="col-3">
				<h4>{{album.titulo}}</h4>
			</div>
			<div class="col-7">
				<i class="fa fa-arrow-circle-left"></i>
				<i class="fa fa-play"></i>
				<i class="fa fa-arrow-circle-right"></i>
			</div>
		</div>
	    	
	  </div>
	</div>

